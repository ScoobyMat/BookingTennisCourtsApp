@page
@model BookingTennisCourts.Pages.Courts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h4>Kort</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Court.Id" />
            <div class="form-group">
                <label asp-for="Court.Name" class="control-label"></label>
                <input asp-for="Court.Name" class="form-control" />
                <span asp-validation-for="Court.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.Info" class="control-label"></label>
                <input asp-for="Court.Info" class="form-control" />
                <span asp-validation-for="Court.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.Status" class="control-label"></label>
                <select asp-for="Court.Status" class="form-control">
                    <option value="" disabled selected>Select status</option>
                    <option value="Available">Dostępne</option>
                    <option value="Unavailable">Nie dostępne</option>
                </select>
                <span asp-validation-for="Court.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.PricePerHour" class="control-label"></label>
                <input asp-for="Court.PricePerHour" class="form-control" />
                <span asp-validation-for="Court.PricePerHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.UrlToPicture" class="control-label"></label>
                <input asp-for="Court.UrlToPicture" class="form-control" />
                <span asp-validation-for="Court.UrlToPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-outline-secondary">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
