@page
@model BookingTennisCourts.Pages.Courts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Court</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Court.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Court.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Court.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Court.Info)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Court.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Court.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Court.PricePerHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Court.PricePerHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Court.UrlToPicture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Court.UrlToPicture)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Court.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index"><i class="fa fa-backspace" aria-hidden="true"></i> Back to List</a>
    </form>
    
    @if (Model.HasReservations)
    {
        <div class="alert alert-warning" role="alert">
            This court has existing reservations. You cannot delete it until all reservations are canceled or completed.
        </div>
    }
    
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
