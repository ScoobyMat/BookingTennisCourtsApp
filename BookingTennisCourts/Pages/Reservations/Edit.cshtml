@page
@model BookingTennisCourts.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h4>Rezerwacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservation.CourtId" class="control-label"></label>
                <select asp-for="Reservation.CourtId" class="form-control" asp-items="@Model.Courts"></select>
                <span asp-validation-for="Reservation.CourtId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Date" class="control-label"></label>
                <input asp-for="Reservation.Date" class="form-control" />
                <span asp-validation-for="Reservation.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.StartTime" class="control-label">StartTime</label>
                <select asp-for="Reservation.StartTime" class="form-control">
                    <option value="" disabled selected>Select StartTime</option>
                    @for (int i = 10; i <= 18; i++)
                    {
                        <option value="@i:00:00">@i:00:00</option>
                    }
                </select>
                <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.EndTime" class="control-label">EndTime</label>
                <select asp-for="Reservation.EndTime" class="form-control">
                    <option value="" disabled selected>Select StartTime</option>
                    @for (int i = 10; i <= 18; i++)
                    {
                        <option value="@i:00:00">@i:00:00</option>
                    }
                </select>
                <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.UserId" class="control-label">User</label>
                <input asp-for="Reservation.UserId" class="form-control" readonly />
                <span asp-validation-for="Reservation.UserId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Reservation.Id" />
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-outline-secondary">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
