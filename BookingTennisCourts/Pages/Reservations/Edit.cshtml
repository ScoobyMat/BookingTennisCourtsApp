@page
@model BookingTennisCourts.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.Id" />
            <div class="form-group">
                <label asp-for="Reservation.CourtId" class="control-label"></label>
                <select asp-for="Reservation.CourtId" class="form-control" asp-items="@Model.Courts"></select>
                <span asp-validation-for="Reservation.CourtId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Data" class="control-label"></label>
                <input asp-for="Reservation.Data" class="form-control" />
                <span asp-validation-for="Reservation.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.StartTime" class="control-label">StartTime</label>
                <select asp-for="Reservation.StartTime" class="form-control">
                    <option value="" disabled selected>Select StartTime</option>
                    @for (int i = 10; i <= 18; i++)
                    {
                        <option value="@i:00:00">@i:00:00</option>
                    }
                </select>
                <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.EndTime" class="control-label">EndTime</label>
                <select asp-for="Reservation.EndTime" class="form-control">
                    <option value="" disabled selected>Select StartTime</option>
                    @for (int i = 10; i <= 18; i++)
                    {
                        <option value="@i:00:00">@i:00:00</option>
                    }
                </select>
                <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.User" class="control-label">User</label>
                <input asp-for="@Model.UserFullName" class="form-control" readonly />
                <span asp-validation-for="Reservation.User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="./Index"><i class="fa fa-backspace" aria-hidden="true"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
