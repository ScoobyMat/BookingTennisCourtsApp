@page
@model BookingTennisCourts.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservation.CourtId" class="control-label"></label>
                <select asp-for="Reservation.CourtId" class="form-control" asp-items="ViewBag.CourtId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Data" class="control-label"></label>
                <input asp-for="Reservation.Data" class="form-control" type="date" />
                <span asp-validation-for="Reservation.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.StartTime" class="control-label">Start Time</label>
                <select asp-for="Reservation.StartTime" class="form-control">
                    <option value="" disabled selected>Select StartTime</option>
                    @for (int i = 10; i <= 18; i++)
                    {
                        <option value="@i:00:00">@i:00</option>
                    }
                </select>
                <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.EndTime" class="control-label">End Time</label>
                <select asp-for="Reservation.EndTime" class="form-control">
                    <option value="" disabled selected>Select EndTime</option>
                    @for (int i = 10; i <= 18; i++)
                    {
                        <option value="@i:00:00">@i:00</option>
                    }
                </select>
                <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}