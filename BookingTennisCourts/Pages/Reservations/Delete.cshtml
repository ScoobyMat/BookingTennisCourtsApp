@page
@model BookingTennisCourts.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Reservation ID: @Model.Reservation.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kort
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourtName)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.Data.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            StartTime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.StartTime)
        </dd>
        <dt class="col-sm-2">
            EndTime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.EndTime)
        </dd>
        <dt class="col-sm-2">
            Użytkownik
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFullName)
        </dd>
    </dl>
</div>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index"><i class="fa fa-backspace" aria-hidden="true"></i> Back to List</a>
    </form>
</div>
