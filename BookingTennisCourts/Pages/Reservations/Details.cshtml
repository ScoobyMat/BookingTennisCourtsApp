@page
@model BookingTennisCourts.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Kort
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourtName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.FullPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.FullPrice)
        </dd>      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.DateCreated)
        </dd>
        <hr />
        <dt class="col-sm-2">
            Użytkownik
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@Model.Reservation.Id">Edytuj</a> |
    <a asp-page="./Index" class="btn btn-outline-secondary">Powrót</a>
</div>
