@page
@model BookingTennisCourts.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Reservation details";
}

<h1>Reservation details</h1>

<div>
    <h4>Details for Reservation ID: @Model.Reservation.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kort
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourtName)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.Data.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            StartTime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.StartTime)
        </dd>
        <dt class="col-sm-2">
            EndTime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.EndTime)
        </dd>
        <dt class="col-sm-2">
            Użytkownik
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFullName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@Model.Reservation?.Id"><i class="fa fa-edit" aria-hidden="true"> </i>Edit</a> |
    <a class="btn btn-primary" asp-page="./Index"><i class="fa fa-backspace" aria-hidden="true"></i> Back to List</a>
</div>
